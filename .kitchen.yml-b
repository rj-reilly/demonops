---
driver:
  name: vagrant

provisioner:
  name: chef_zero

verifier:
  name: inspec

platforms:
  - name: ubuntu-16.04

suites:
  - name: sensu
    data_bags_path: "test/integration/data_bags"
    driver:
      vm_hostname: sensu
    run_list:
      - recipe[demonops::default]
    verifier:
      inspec_tests:
        - test/recipes
    attributes:
      aig-nexgenmon:
        myname: 'sensu'
        testmode: true

